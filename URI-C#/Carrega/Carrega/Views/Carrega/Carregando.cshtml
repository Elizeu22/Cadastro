@{
    ViewData["Title"] = "Carregando";
}

<script src="http://code.jquery.com/jquery-3.3.1.min.js" type="text/javascript"></script>

<div class="jumbotron">
    <h1>Bootstrap Tutorial</h1>
    <p>Bootstrap is the most popular HTML, CSS...</p>
</div>

