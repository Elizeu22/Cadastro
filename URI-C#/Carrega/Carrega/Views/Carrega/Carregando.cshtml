<div class="row">
    <div class="col-md-4">

        @using (Html.BeginForm("Carregando", "Carrega", FormMethod.Post, new { id = "teste" }))
        {

            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                @Html.Label("Bit 01:", "Bit 01:")
                @Html.TextBoxFor(model => model.Bit2, new { @class = "form-control", id = "Numero01",required="required" })
            </div>



            <div class="form-group">
                @Html.Label("Bit 02:", "Bit 02:")
                @Html.TextBoxFor(model => model.Bit3, new { @class = "form-control", id = "Numero02",required="required" })
            </div>


            <div class="form-group">
                <input type="submit" value="Executar" class="btn btn-danger" id="Executa" />
            </div>


            <div class="form-group">
                @Html.Label("Resultado:", "Resultado:")


                @Html.DisplayFor(m => m.Bit1, new { @class = "form-control" })


            </div>




        }


    </div>






</div>