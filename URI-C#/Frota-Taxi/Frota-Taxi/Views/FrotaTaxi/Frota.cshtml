<div class="row">
    <div class="col-md-4">

        @using (Html.BeginForm("Frota", "FrotaTaxi", FormMethod.Post, new {id = "Frota" }))
        {

    
            <div class="form-group">
                @Html.Label("Preco Alcool:", "Preco Alcool:")
                @Html.TextBoxFor(model => model.alcool, new { @class = "form-control", id = "Alcool", required = "required" })
            </div>



            <div class="form-group">
                @Html.Label("Preco Gasolina:", "Preco Gasolina:")
                @Html.TextBoxFor(model => model.gasolina, new { @class = "form-control", id = "Gasolina", required = "required" })
            </div>


            <div class="form-group">
                @Html.Label("Rendimento Alcool:", "Rendimento Alcool:")
                @Html.TextBoxFor(model => model.rendimento_alcool, new { @class = "form-control", id = "RendimentoAlcool", required = "required" })
            </div>


            <div class="form-group">
                @Html.Label("Rendimento Gasolina:", "Rendimento Gasolina:")
                @Html.TextBoxFor(model => model.rendimento_gasolina, new { @class = "form-control", id = "RendimentoGasolina", required = "required" })
            </div>


            <div class="form-group">
                <input type="submit" value="Executar" class="btn btn-danger" id="Executa" />
            </div>


            <div class="form-group">
                @Html.Label("Resultado:", "Resultado:")


                @Html.DisplayFor(m => m.abastece, new { @class = "form-control" })


            </div>


        }


    </div>

</div>
