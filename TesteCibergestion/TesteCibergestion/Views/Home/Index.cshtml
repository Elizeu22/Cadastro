@model TesteCibergestion.Models.DadoCadastral

@{
    ViewData["Title"] = "Index";
}

<br>
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "Cadastro" }))
{

    <div class="form-group row">
        @Html.Label("Nome", "Nome", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-5">
            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
        </div>
    </div>



    <div class="form-group row">
        @Html.Label("Telefone", "Telefone", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-5">
            @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group row">
        @Html.Label("Tipo", "Tipo", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-3">
            @Html.DropDownListFor(m => m.Tipo, new SelectList(Enum.GetValues(typeof(Tipo))),
     "Selecione o Tipo ", new { @class = "form-control" })
        </div>
    </div>



    <div style="border: 1px ; margin: 5px" id="Modal">

        @*<partial name="ListarUsuario.cshtml" for="@Model.CarregaUsuario" />*@




    </div>





    <div class="col-sm-10">
        <button type="submit" class="btn btn-primary mb-2">Gravar</button>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
 }